{
	"name": "rad-discord-bot",
	"main": "dist/index",
	"module": "index.ts",
	"private": true,
	"type": "module",
	"scripts": {
		"preinstall": "npx only-allow bun",
		"dev": "concurrently \"bun:start\" \"bun:convex dev\" --names \"discord, convex\" --prefix-colors \"cyan,magenta\"",
		"start": "bun run src/index.ts",
		"build": "bunx tsc --noEmit",
		"lint": "biome check --write"
	},
	"dependencies": {
		"convex": "^1.29.0",
		"discord.js": "^14.24.2",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@types/bun": "latest",
		"@types/node": "^24.10.0",
		"chalk": "^5.6.2",
		"concurrently": "^9.2.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	}
}
